{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: Compilar com Clang",
      "command": "/usr/bin/clang",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/.build/${fileBasenameNoExtension}"
